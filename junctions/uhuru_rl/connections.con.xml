<connections>
  <!-- N_in: lane 1 = left to E_out; lane 0 = straight to S_out and right to W_out -->
  <connection from="N_in" to="E_out" fromLane="1" toLane="1"/>
  <connection from="N_in" to="S_out" fromLane="0" toLane="0"/>
  <connection from="N_in" to="W_out" fromLane="0" toLane="0"/>

  <!-- S_in -->
  <connection from="S_in" to="W_out" fromLane="1" toLane="1"/>
  <connection from="S_in" to="N_out" fromLane="0" toLane="0"/>
  <connection from="S_in" to="E_out" fromLane="0" toLane="0"/>

  <!-- E_in -->
  <connection from="E_in" to="S_out" fromLane="1" toLane="1"/>
  <connection from="E_in" to="W_out" fromLane="0" toLane="0"/>
  <connection from="E_in" to="N_out" fromLane="0" toLane="0"/>

  <!-- W_in -->
  <connection from="W_in" to="N_out" fromLane="1" toLane="1"/>
  <connection from="W_in" to="E_out" fromLane="0" toLane="0"/>
  <connection from="W_in" to="S_out" fromLane="0" toLane="0"/>
</connections>
